<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | HLOVF</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/maindashboard.css">
  <link rel="stylesheet" href="/css/createpost.css">
  <link rel="stylesheet" href="/css/contactsubmissions.css">



</head>
<body>
    

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3 sticky-top">
  <div class="container-fluid">
    <button class="btn btn-primary me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
      <i class="bi bi-list"></i>
    </button>
    <a class="navbar-brand fw-bold" href="#">HLOVF Admin</a>
    <ul class="navbar-nav ms-auto d-flex align-items-center">
      <li class="nav-item me-3">
        <a href="/" class="nav-link">Go to Site</a>
      </li>
      <li class="nav-item">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="darkModeToggle">
          <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
        </div>
      </li>
    </ul>
  </div>
</nav>

<!-- Offcanvas Sidebar -->
<% if (session && session.user && session.user.role === 'admin') { %>
  <div class="offcanvas-wrapper">
    <div class="offcanvas bg-dark offcanvas-start" tabindex="-1" id="sidebar">
      <div class="offcanvas-header text-white">
        <h5 class="offcanvas-title">Admin Panel</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body p-0">
        <div class="p-3 border-bottom">
          <small>Welcome,</small><br>
          <strong><%= session.user.username %></strong>
        </div>
        <a href="/admin/dashboard" class="d-block px-3 py-2"><i class="bi bi-speedometer2"></i> Dashboard</a>
        <a href="/admin/create-post" class="d-block px-3 py-2"><i class="bi bi-pencil-square"></i> Create Post</a>
        <a href="/admin/manage-posts" class="d-block px-3 py-2"><i class="bi bi-card-list"></i> Manage Posts</a>
        <a href="/" target="_blank" class="d-block px-3 py-2"><i class="bi bi-house-door"></i> View Website</a>
        <a href="/admin/logout" class="d-block px-3 py-2 text-danger"><i class="bi bi-box-arrow-right"></i> Logout</a>
      </div>
    </div>
  </div>
<% } %>
