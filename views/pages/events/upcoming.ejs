<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"><style>
  .hero{
    background-image: url(/images/support.png);
  }
</style>
</head>
<body>
    



<%- include('../../partials/header') %>

<section class="hero bg-primary text-white py-5 text-center">
  <div style="margin-top: 100px;" class="container">
    <h1 class="display-4">Upcoming Events</h1>
    <p class="lead">Join us in creating smiles and changing lives through our outreach programs.</p>
  </div>
</section>

<section class="container py-5">
    <div class="row">
      <% events.forEach(event => { %>
        <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="100">
          <div class="card h-100 shadow">
            <div class="card-body d-flex">
              <div class="me-3">
                <% if (event.program === 'Orphanage Outreach') { %>
                  <i class="bi bi-people-fill display-6 text-primary"></i>
                <% } else if (event.program === 'Widows Empowerment') { %>
                  <i class="bi bi-person-hearts display-6 text-danger"></i>
                <% } else if (event.program === 'Health Program') { %>
                  <i class="bi bi-heart-pulse-fill display-6 text-success"></i>
                <% } else if (event.program === 'Education Support') { %>
                  <i class="bi bi-book-fill display-6 text-info"></i>
                <% } else if (event.program === 'Food Relief') { %>
                  <i class="bi bi-basket-fill display-6 text-warning"></i>
                <% } else if (event.program === 'Business Grants') { %>
                  <i class="bi bi-cash-stack display-6 text-dark"></i>
                <% } else if (event.program === 'Prayer and Counseling') { %>
                  <i class="bi bi-chat-dots-fill display-6 text-secondary"></i>
                <% } else { %>
                  <i class="bi bi-stars display-6 text-muted"></i>
                <% } %>
              </div>
              <div>
                <h5 class="card-title"><%= event.title %></h5>
                <h6 class="card-subtitle text-muted mb-2"><%= event.program %></h6>
                <p class="card-text"><%= event.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  
<%- include('../../partials/footer') %>
<!-- AOS JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init();
</script>

    
</body>
</html>