
<%- include('../../partials/headerAdmin') %>

  <!-- Main Content -->
  <div class="main-content container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Manage Blog Posts</h2>
      <a href="/admin/create-post" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Post</a>
    </div>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (blogs.length > 0) { %>
          <% blogs.forEach(blog => { %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.createdAt.toDateString() %></td>
              <td>
                <a href="/admin/view-post/<%= blog._id %>" class="btn btn-info btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>
                <a href="/admin/edit-post/<%= blog._id %>" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <form action="/admin/delete-post/<%= blog._id %>" method="GET" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?')">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
            
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="3" class="text-center">No blog posts available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

<%- include('../../partials/footerAdmin') %>