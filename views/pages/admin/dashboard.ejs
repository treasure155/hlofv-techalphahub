<%- include('../../partials/headerAdmin') %>

<!-- Main Content -->
<div class="main-content">
  <div class="container-fluid">
    <h3 class="mb-4">Welcome, Admin</h3>

    <!-- Dashboard Cards -->
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Posts</h5>
            <p class="card-text"><%= totalPosts %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-info shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Volunteers</h5>
            <p class="card-text"><%= totalVolunteers %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white" style="background-color: #1b479e;">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-cash-coin"></i> Total Donations</h5>
            <p class="card-text"><%= totalDonations %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white" style="background-color: #fb8127;">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-wallet2"></i> Total Amount Donated</h5>
            <p class="card-text">₦<%= totalAmountDonated.toLocaleString() %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Donations Table -->
    <div class="row mt-5">
      <div class="col">
        <h4>Recent Donations</h4>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover shadow-sm">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Donor Name</th>
                <th>Email</th>
                <th>Amount (₦)</th>
              </tr>
            </thead>
            <tbody>
              <% if (donations && donations.length > 0) { %>
                <% donations.forEach((donation, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= donation.name %></td>
                    <td><%= donation.email %></td>
                    <td>₦<%= donation.amount.toLocaleString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">No donations yet</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Newsletter Subscribers -->
    <div class="row mt-5">
      <div class="col">
        <h4>Newsletter Subscribers</h4>
        <a href="/admin/subscribers/download" class="btn btn-sm btn-danger mb-3">Download as PDF</a>
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Email</th>
                <th>Date Subscribed</th>
              </tr>
            </thead>
            <tbody>
              <% if (subscribers && subscribers.length > 0) { %>
                <% subscribers.forEach((sub, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= sub.email %></td>
                    <td><%= sub.subscribedAt.toDateString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No subscribers found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

<%- include('../../partials/footerAdmin') %>